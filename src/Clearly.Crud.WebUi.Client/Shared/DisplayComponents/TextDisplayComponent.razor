@using Newtonsoft.Json.Linq

@inherits BaseDisplayComponent

@Value

@code {
    public bool IsValid { get; set; }

    public string Value {
        get
        {
            if (Input.Value.Type == JTokenType.String)
            {
                return Input.Value.Value<string>() ?? string.Empty;
            }

            return string.Empty;
        }
    }
}