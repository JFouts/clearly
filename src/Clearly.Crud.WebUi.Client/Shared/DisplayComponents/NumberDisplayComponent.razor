@using Newtonsoft.Json.Linq

@inherits BaseDisplayComponent

@if (IsValid)
{
    @Value
}

@code {
    public bool IsValid { get; set; }

    public long Value {
        get
        {
            if (Input.Value.Type == JTokenType.Integer)
            {
                IsValid = true;

                return Input.Value.Value<long>();
            }

            IsValid = false;

            return 0;
        }
    }
}