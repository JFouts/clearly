@model DomainModeling.Crud.WebUi.Models.EntitySearchModel

@{
    Layout = "_Layout";
}

@if (Model == null)
{
    return;
}

<h1><span class="text-muted small">View all </span>  @Model.FormDefinition.DisplayName<span class="text-muted">(s)</span></h1>

<div class="py-3">
    <div class="mb-3 d-flex justify-content-end">
        <a href="@(Context.Request.Path)/create" class="btn btn-primary">Add New</a>
    </div>

    <div class="mb-3">
        <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
    </div>

    <table class="table table-striped table-loading" data-source="@Model.FormDefinition.DataSourceUrl">
    <thead>
        <tr>
            @foreach (var column in @Model.FormDefinition.Fields)
            {
                <th>@column.DisplayName</th>
            }
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var record in Model.Results) 
        {
            <tr>
                @foreach (var column in @Model.FormDefinition.Fields)
                {
                    <td>@(record.ContainsKey(column.FieldName) ? record[column.FieldName] : string.Empty)</td>
                }
                <td><span></span></td>
            </tr>
        }
    </tbody>
    </table>

    <nav aria-label="@Model.FormDefinition.DisplayName list page navigation">
    <ul class="pagination justify-content-center">
        <li class="page-item">
        <a class="page-link" href="#" aria-label="Previous">
            <span aria-hidden="true">&laquo;</span>
        </a>
        </li>
        <li class="page-item"><a class="page-link" href="#">1</a></li>
        <li class="page-item"><a class="page-link" href="#">2</a></li>
        <li class="page-item"><a class="page-link" href="#">3</a></li>
        <li class="page-item">
        <a class="page-link" href="#" aria-label="Next">
            <span aria-hidden="true">&raquo;</span>
        </a>
        </li>
    </ul>
    </nav>
</div>