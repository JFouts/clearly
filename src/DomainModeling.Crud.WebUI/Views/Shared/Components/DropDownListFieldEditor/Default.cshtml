@model InputFieldEditorViewModel;

@if (Model == null) return;

@{
  var value = Model.Value as string ?? string.Empty;
}

<div class="mb-3">
  <label for="@Model.Id">@Model.Label</label>
  <select class="form-select" id="@Model.Id" name="@Model.FieldName">
    <option value="1" selected='@(value == "1")'>Option 1</option>
    <option value="2" selected='@(value == "2")'>Option 2</option>
    <option value="3" selected='@(value == "3")'>Option 3</option>
    <option value="4" selected='@(value == "4")'>Option 4</option>
  </select> 
</div>